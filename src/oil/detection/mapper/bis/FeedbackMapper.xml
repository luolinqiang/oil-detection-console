<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oil.detection.dao.bis.FeedbackDao">
    <!-- Result Map-->
    <resultMap id="BaseResultMap" type="oil.detection.entity.bis.Feedback">
        <result column="id" property="id"/>
        <result column="user_id" property="user_id"/>
        <result column="content" property="content"/>
        <result column="create_time" property="create_time"/>
        <result column="update_time" property="update_time"/>
        <result column="state" property="state"/>
        <result column="remark" property="remark"/>
        <result column="real_name" property="real_name"/>
    </resultMap>

    <!-- feedback table all fields -->
    <sql id="Base_Column_List">
	 id,user_id,content,create_time,update_time,state,remark
</sql>


    <!-- 查询条件 -->
    <sql id="Example_Where_Clause">
        where 1=1
        <trim suffixOverrides=",">
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="user_id != null and user_id != ''">
                and user_id = #{user_id}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="create_time != null and create_time != ''">
                and create_time = #{create_time}
            </if>
            <if test="update_time != null and update_time != ''">
                and update_time = #{update_time}
            </if>
            <if test="state != null and state != ''">
                and state = #{state}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </trim>
    </sql>


    <!-- 插入记录 -->
    <insert id="add" parameterType="Object">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into feedback(id,user_id,content,create_time,update_time,state,remark)
        values(#{id},#{user_id},#{content},#{create_time},#{update_time},#{state},#{remark})
    </insert>

    <!-- 根据id，修改记录-->
    <update id="update" parameterType="Object">
        update feedback set user_id=#{user_id},content=#{content},
        <if test="state!= null">state = #{state,jdbcType=TINYINT},</if>remark=#{remark} where id=#{id}
    </update>

    <!-- 修改记录，只修改只不为空的字段 -->
    <update id="updateBySelective" parameterType="Object">
        update feedback set
        <trim suffixOverrides=",">
            <if test="user_id != null  ">
                user_id=#{user_id},
            </if>
            <if test="content != null  ">
                content=#{content},
            </if>
            <if test="create_time != null  ">
                create_time=#{create_time},
            </if>
            <if test="update_time != null  ">
                update_time=#{update_time},
            </if>
            <if test="state != null  ">
                state=#{state},
            </if>
            <if test="remark != null  ">
                remark=#{remark},
            </if>
        </trim>
        where id=#{id}
    </update>

    <!-- 删除记录 -->
    <delete id="delete" parameterType="Object">
	delete 	 from feedback where id = #{id}
</delete>

    <!-- 根据id查询 反馈 -->
    <select id="queryById" resultMap="BaseResultMap" parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from feedback where id = #{id}
    </select>

    <!-- 反馈 列表总数-->
    <select id="queryByCount" resultType="java.lang.Integer" parameterType="Object">
        select count(1) from feedback
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询反馈列表 -->
    <select id="queryByList" resultMap="BaseResultMap" parameterType="Object">
        select
        f.id,f.user_id,f.content,f.create_time,f.update_time,f.state,f.remark,u.real_name
        from feedback f
        left join user u on f.user_id=u.id
        <include refid="Example_Where_Clause"/>
        <if test="real_name != null and real_name != ''">
            and real_name = #{real_name}
        </if>
        <if test="pager.orderCondition != null and pager.orderCondition != ''">
            ${pager.orderCondition}
        </if>
        <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''">
            ${pager.mysqlQueryCondition}
        </if>
    </select>

</mapper>   
